pipeline {
    agent any
    
    triggers {
        cron('H H * * 6') // Schedule the job to run every Saturday at 12:00 AM
    }
    
    stages {
        stage('Prepare') {
            steps {
                sh 'pip install requests pytz pandas python-dotenv'
                sh 'touch journal_emails.db'
                sh 'touch journal.log'
            }
        }
        
        stage('Run Python Code') {
            steps {
                sh 'python journal.py'
            }
        }
        
        stage('Archive Logs') {
            steps {
                archiveArtifacts 'journal_emails.db'
                archiveArtifacts 'journal.log'
            }
        }
    }
}




pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/naveenrk7/journal_automation.git']])
            }
        }
        stage('Build') {
            steps{
                git 'https://github.com/naveenrk7/journal_automation.git'
                bat 'python journal.py'
            }
        }
    }
}

